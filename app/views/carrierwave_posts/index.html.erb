<h1 class="mt-5">Carrierwave Posts</h1>
<%= link_to 'New Carrierwave Post', new_carrierwave_post_path, class: "btn btn-primary float-right" %>
<div class="table-responsive mt-5">
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Image</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @carrierwave_posts.each do |carrierwave_post| %>
        <tr>
          <td><%= carrierwave_post.title %></td>
          <td>
            <%= image_tag carrierwave_post.image_url, class: "rounded", width: 100, height: 100 %>
          </td>
          <td><%= carrierwave_post.description %></td>
          <td>
            <%= link_to 'Show', carrierwave_post %>
            |
            <%= link_to 'Edit', edit_carrierwave_post_path(carrierwave_post) %>
            |
            <%= link_to 'Destroy', carrierwave_post, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
